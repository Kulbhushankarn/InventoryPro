@model InventoryPro.VO.clsInventoryItem

@{
    ViewBag.Title = "Item Details";
}

<h2>Item Details</h2>

<table class="table table-bordered">
    <tr>
        <th>Item ID</th>
        <td>@Model.ItemId</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Quantity</th>
        <td>@Model.Quantity</td>
    </tr>
    <tr>
        <th>Reorder Level</th>
        <td>@Model.ReorderLevel</td>
    </tr>
</table>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
</p>
