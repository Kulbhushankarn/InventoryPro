@model InventoryPro.VO.clsUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row shadow-lg p-4 bg-light rounded-3 w-100">
        <div class="col-12 col-md-6 mb-4 mb-md-0">
            <img src="~/Content/Images/11785899_4826433.svg" alt="Login Image" class="img-fluid" />
        </div>
        <div class="col-12 col-md-6">
            <h2 class="text-center text-primary mb-4">Login</h2>

            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Display Model Errors -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

                <div class="mb-2">
                    @Html.LabelFor(model => model.Username, "Username", new { @class = "form-label" })
                    @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter your username" })
                </div>

                <div class="mb-2">
                    @Html.LabelFor(model => model.PasswordHash, "Password", new { @class = "form-label" })
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" />
                </div>


                <div class="mb-2">
                    @Html.LabelFor(model => model.Role, "Role", new { @class = "form-label" })
                    @Html.TextBox("role", null, new { @class = "form-control", placeholder = "Enter your role" })
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-2">Login</button>

                <p class="text-center">
                    Don't have an account? <a href="@Url.Action("Register", "User")" class="text-decoration-none text-primary">Register here</a>
                </p>
            }
        </div>
    </div>
</div>

<style>
    /* Styles for the form layout */
body {
    font-family: 'Roboto', sans-serif;
    background-image: linear-gradient(to bottom right, #d16ba5, #86a8e7, #5ffbf1);
    background-size: cover;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 900px;
}

.row {
    background-color: white;
    border-radius: 15px;
}

.form-label {
    font-weight: bold;
}

.form-control {
    border: 1px solid #ced4da;
    border-radius: 5px;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Adjust layout for smaller screens */



</style>
