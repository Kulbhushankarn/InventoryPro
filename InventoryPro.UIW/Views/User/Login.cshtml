@model InventoryPro.VO.clsUser

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Login";
}

<link rel="stylesheet" href="~/Content/Login.css" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="row shadow-lg p-4 bg-light rounded-3 w-100">
        <div class="col-12 col-md-6 mb-4 mb-md-0 text-center text-md-start">
            <img src="~/Content/Images/11785899_4826433.svg" alt="Login Image" class="img-fluid mx-auto" />
        </div>
        <div class="col-12 col-md-6">
            <h2 class="text-center text-primary mb-4">Login</h2>

            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <!-- Display Model Errors -->
                @Html.ValidationSummary(true, "", new { @class = "text-danger text-center" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.Username, "Username", new { @class = "form-label" })
                    @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Enter your username" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.PasswordHash, "Password", new { @class = "form-label" })
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" />
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Role, "Role", new { @class = "form-label" })
                    @Html.TextBox("role", null, new { @class = "form-control", placeholder = "Enter your role" })
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>

                <p class="text-center">
                    Don't have an account? <a href="@Url.Action("Register", "User")" class="text-decoration-none text-primary">Register here</a>
                </p>
            }
        </div>
    </div>
</div>

